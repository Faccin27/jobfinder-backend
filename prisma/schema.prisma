datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String  @id @default(uuid())
  name      String
  email     String  @unique
  role     Role   @default(CLIENTE)
  password     String
  picture      String? 
  job   String? 
  createdAt DateTime @default(now())
}

enum Role {
  CLIENTE
  PRESTADOR
  ADMIN
}
